    <div class="container" style="padding-top:2% ;">
        <form id="filter" method="POST">
            <h5>Search By:</h5>
            <div class="form-row">
                <div class="input-group form-group col-md-6">
                    <div class="input-group-prepend talk">
                        <span class="input-group-text"><i class="fas fa-microphone"></i></span>
                    </div>
                    <input type="text" name="field1" class="form-control content" placeholder="coursecode/dept">
                </div>
                <div class="form-group col-md-3">

                    <select id="type" name="type" class="form-control" required>
                        <option selected>Elective</option>
                        <option>Core</option>
                        </select>

                </div>
                <div class="form-group col-md-3">
                    <button type="submit" class="btn btn-primary filter">Filter</button>
                </div>
            </div>
        </form>
    </div>
    <div class="container">
        <h2>Courses</h2>
        <div class="row row-cols-1 row-cols-md-3">
            <% courses.forEach(function(course) {%>

                <div class="col mb-4">
                    <div class="card" style="min-height: 360px; border: 1px solid rgb(93, 179, 182);
                    border-radius: 5%;">
                        <img src="https://www.learnod.com/img/courses/technical-analysis-online-course.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h6 class="card-title">
                                <%=course.course_id  %> -
                                    <%= course.name  %>
                            </h6>
                            <h6 class="card-text"> (
                                <%= course.Type %> )</h6>

                            <a style="margin-top: 2%;" href="/course/<%= course.course_id %>" class="btn btn-info">Info</a>
                        </div>

                    </div>
                </div>
                <% }); %>
        </div>



    </div>

    <script>
        var tkn = localStorage.getItem("token");
        var usr = localStorage.getItem("user");
        var btn = document.querySelector(".talk");
        var content = document.querySelector(".content");
        console.log(usr);
        document.getElementById('filter').action = "/home/student/filter/" + usr;
        var SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
        var recogniton = new SpeechRecognition();
        recogniton.onstart = function() {
            console.log("Voice is Activated, talk to microphone");

        }
        recogniton.onresult = function(event) {
            var current = event.resultIndex;
            var transcript = event.results[current][0].transcript;
            content.value = transcript;
            console.log(transcript);

        }
        btn.addEventListener('click', function() {
            recogniton.start();
        });


        if (!tkn) {
            window.location.replace("/login");
        }
        var role = localStorage.getItem("role");
        if (role != "student") {
            document.getElementById("homelink").href = "/home/student/" + usr;
            document.getElementById("link1").href = "/home/student/profile/" + usr;
            document.getElementById("usr").innerHTML = usr;
        } else {
            document.getElementById("homelink").href = "/home/student/" + usr;
            document.getElementById("link1").href = "/home/student/profile/" + usr;
            document.getElementById("usr").innerHTML = usr;

        }

        function logoutfnc() {
            localStorage.clear();
            window.location.replace("/login");

        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
